<Window x:Class="Space_Invaders.View.HighScores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Invaders.View"
        mc:Ignorable="d"
        Title="HighScores" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/Sprites/Background/background.png"/>
        </Grid.Background>
        <Label Grid.Row="0" Grid.Column="0" Content="HighScores: " HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Style="{StaticResource Bungee}" Foreground="White"/>
        <ListBox x:Name="mots" Grid.Row="2" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" Margin="0 0 0 0" Background="black" Foreground="white" FontSize="20px" Style="{StaticResource Bungee}"/>
    </Grid>
</Window>
