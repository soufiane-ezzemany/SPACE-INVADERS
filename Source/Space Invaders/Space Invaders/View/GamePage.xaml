<Page x:Class="Space_Invaders.View.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Space_Invaders.View"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1200"
      Title="GamePage">
    

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Sprites/Background/background.png"/>
        </Grid.Background>
        <Button  Background="Transparent" Height="30" Width="80" BorderThickness="2" BorderBrush="white" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10, 0, 10,0">
            <DockPanel>
                <Image Source="/Sprites/Icon/pauseIcon.png"  Width="15"/>
                <TextBlock  Text="PAUSE" FontWeight="bold"  Foreground="White" FontSize="15" Height="20"  />
            </DockPanel>
        </Button>
        <Canvas HorizontalAlignment="Stretch" Height="Auto" Margin="0,50,0,0" VerticalAlignment="Stretch" Width="Auto">
            
        </Canvas>

    </Grid>
</Page>
